.logo 
	font-family 'proxima-nova', sans-serif
	color #333
	position absolute
	text-transform uppercase 
	letter-spacing 0.2em
	font-weight bold
	top 20px
	left 30px

.seconds 
	font-size 1.5em
	font-family 'lato'
	position absolute 
	color #eee!important
	z-index 500
	letter-spacing 0.2em
	top 30px 
	right 50px

.counter
	width 100%
	height 100%
	// background white
	color rgb(50, 50, 50)
	text-align center
	font-size 1em
	h1 
		font-family 'lato'
		position absolute
		font-weight 300
		left 50%
		top 50%
		transform translate(-50%, -60%)
		text-transform uppercase 
		letter-spacing 0.2em
		width 100%
		margin 0
		padding 0
	span.number 
		font-size 300%
		// font-family 'garamond'
		font-weight 300

