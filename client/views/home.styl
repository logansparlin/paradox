.counter.dark
	background rgb(30, 30, 30)
	position absolute
	width 100%
	height 100%
	z-index 5
	left -48%
	top 0
	transform skew(-10deg)
	-webkit-backface-visibility hidden
	h1 
		color #eee
		
.grain-overlay 
	pointer-events none
	position absolute
	width 100%
	height 100%
	top 0
	left 0 
	background url('../img/grain.png') 
	background-position 20px 50px
	// background-size 40%
	animation grain 400ms steps(10) infinite
	z-index 500
.mask 
	position absolute 
	width 100%
	height 100%
	top 0
	left 48% 
	z-index 50
	overflow hidden
	transform skew(10deg)